{
	"manifest_version": 2,

	"name": "Social Media Extension",
	"description": "Social Media Extension",
	"version": "0.0.1.1",

	"web_accessible_resources": [
		"content_scripts/helper_functions.js"
	],

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"browser_action": {
	    "default_icon": "chat-icon.png"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"externally_connectable": {
	  "matches": ["https://*.facebook.com/*", "https://wwww.google.com/*", "*://adsrental.com/*"]
	},

	"permissions": [
		"tabs",
		"activeTab",
		"notifications",
		"storage",
		"cookies",
		"webRequest",
		"webRequestBlocking",
		"http://*/*",
		"https://*/*"
	]
}